{% extends 'base.html.twig' %}

{% block title %}Detail Produit{% endblock %}

{% block content %}
 <!-- Navigation -->
        {{ include ('layout/menu.html.twig') }}
    <div class="masthead">
        <h1>Detail</h1>
        <table class="table table-striped table-light" >
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ toy.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ toy.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ toy.description }}</td>
                </tr>
                <tr>
                    <th>Taille</th>
                    <td>{{ toy.size }}cm</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ toy.price }}€</td>
                </tr>
                <tr>
                    <th>Reference</th>
                    <td>{{ toy.reference }}</td>
                </tr>
                <tr>
                    <th>Nombres de Vues</th>
                    <td>{{ toy.viewCounter }}</td>
                </tr>
            </tbody>
        </table>
        <a  href="{{ path('toy_index') }}">
            <button class="btn btn-info btn-sm">Retour à la liste</button>
        </a>
    <a href="{{ path('toy_edit', {'id': toy.id}) }}">
        <button class="btn btn-info btn-sm"><i class="fa fa-edit"></i></button>
    </a>
    {{ include('toy/_delete_form.html.twig') }}
    </div>
{% endblock %}



