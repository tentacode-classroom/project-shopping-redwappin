{% extends 'base.html.twig' %}

{% block title %} Se connecter {% endblock %}

{% block content %} 
     <!-- Navigation -->
        {{ include ('layout/menu.html.twig') }}
<div class="masthead">
    <h1 class="form-heading">Login Form</h1>
    <div class="login-form">
        <div class="main-div">
            <div class="panel">
                <h2>Se Connecter</h2>
                <p>S'il vous plait renseignez votre adresse email et votre mot de passe</p>
            </div>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form id="Login" action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <input type="email" class="form-control" name="_username" id="email" placeholder="Email"  value="{{ last_username }}">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password" name="_password" placeholder="Password">
                </div>
                <div class="forgot">
                    <a href="{{ path('registration') }}">Pas inscrit? Inscrivez vous!</a>
                </div>
                <button type="submit" class="btn btn-primary">Se Connecter</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}

